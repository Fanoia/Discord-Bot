


<% 




let talent = false;
let staff = false;
let rateLimit = false;





%>

<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Access-Control-Allow-Origin" content="*">
    <link rel="stylesheet" href="/css/style.css">
    <title>FanoiaEN Portal - Collabs - New collab</title>
    <style>
    form {
        width: 100%;
        max-width: 400px;
        margin: auto;
        padding: 20px;
        background-color: #add8e6; /* Light blue background */
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        font-family: Arial, sans-serif;
        }

        label {
        display: block;
        margin-bottom: 8px;
        font-weight: bold;
        color: #657d85; /* Darker color for labels */
        }

        input[type="text"],
        input[type="datetime-local"],
        select {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #657d85; /* Darker border */
        border-radius: 5px;
        box-sizing: border-box;
        font-size: 16px;
        background-color: rgb(134, 134, 134); /* Keeps input fields white */
        color: #657d85; /* Darker text inside inputs */
        }

        input[type="checkbox"] {
        margin-right: 10px;
        }

        input[type="submit"] {
        width: 100%;
        padding: 10px;
        background-color: #657d85; /* Darker color for the button */
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        }

        input[type="submit"]:hover {
        background-color: #576c74; /* Slightly darker hover effect for the button */
        }

      </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="/img/logo.png" alt="Logo" width="96" height="90" class="d-inline-block align-text-top">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">              
                </ul>
                <div class="d-flex">
                    <button onclick="window.location.href='/logout'" class="btn btn-primary">Log Out</button>
                </div>
            </div>
        </div>
    </nav>


    <div class="side-nav">
        <div class="side-nav-info">
            <img class="side-nav-logo" src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" alt="Logo" width="60" height="60" style="border-radius: 50%;">
            <div class="side-nav-info-text">
                <span class="side-nav-nickname"><%= user.global_name %></span>
                <span class="side-nav-role"><%
                if (staff) {
                    %> Staff <%
                } else if (talent) {
                    %> Talent <%
                }
                %>
                </span>
            </div>
        </div>
        <div class="side-nav-item">
            <a class="side-nav-item-text" href="/">
            <i class="bi bi-house-fill"></i> <p class="side-nav-text">Home</p></a>
        </div>
        <div class="side-nav-item">
            <a class="side-nav-item-text" href="/collabs">
            <i class="bi bi-people-fill"></i><p class="side-nav-text">Collabs</p></a>
        </div>
    </div>


    <div class="collab-form">
        <form>
            <input type="hidden" id="makerUserId" name="makerUserId" value="<%= user.id %>">
            <input type="hidden" id="makerName" name="makerName" value="<%= user.username %>">

            <label for="game">Game:</label>
            <input type="text" id="game" name="game"><br><br>

            <label for="date">Date:</label>
            <input type="datetime-local" id="date" name="date"><br><br>

            <label for="platform">Platform:</label>
            <select id="platform" name="platform">
                <option value="">Select a platform</option>
                <option value="PC">PC</option>
                <option value="Console">Console</option>
                <option value="Mobile">Mobile</option>
            </select><br><br>

            <label for="isStreaming">Is Streaming:</label>
            <input type="checkbox" id="isStreaming" name="isStreaming"><br><br>

            <label for="isNSFW">Is NSFW (Language/Topic):</label>
            <input type="checkbox" id="isNSFW" name="isNSFW"><br><br>

            <input type="submit" value="Create Collaboration">
        </form>
    </div>
    <script src="/js/bootstrap/bootstrap.bundle.min.js"></script>












    <script>window.addEventListener('resize', function() {
  if (window.innerWidth < 800) {
    // Hide text in side nav
    document.querySelectorAll('.side-nav-text').forEach(function(text) {
      text.style.display = 'none';
    });
    document.querySelectorAll('.side-nav-role').forEach(function(text) {
      text.style.display = 'none';
    });
    document.querySelectorAll('.side-nav-nickname').forEach(function(text) {
      text.style.display = 'none';
    });
    // Show only icons in side nav
    document.querySelectorAll('.side-nav i').forEach(function(icon) {
      icon.style.display = 'inline-block';
    });
  } else {
    // Show text in side nav
    document.querySelectorAll('.side-nav i').forEach(function(icon) {
      icon.style.display = 'inline-block';
    });
    document.querySelectorAll('.side-nav i').forEach(function(icon) {
      icon.style.display = 'inline-block';
    });
    document.querySelectorAll('.side-nav-text').forEach(function(text) {
      text.style.display = 'inline-block';
    });
    document.querySelectorAll('.side-nav-role').forEach(function(text) {
      text.style.display = 'inline-block';
    });
    document.querySelectorAll('.side-nav-nickname').forEach(function(text) {
      text.style.display = 'inline-block';
    });
  }
});

window.addEventListener('load', function() {
  var collabInfoContainer = document.querySelector('.collab-info-container');
  var textElement = document.getElementsByClassName('side-nav-text');
  var textElement2 = document.querySelector('.side-nav-role');
  var textElement3 = document.querySelector('.side-nav-nickname');

  if (window.innerWidth < 800) {
    for (var i = 0; i < textElement.length; i++) {
    textElement[i].style.display = 'none';
  }
    textElement2.style.display = 'none';
    textElement3.style.display = 'none';
  } else {
    for (var i = 0; i < textElement.length; i++) {
    textElement[i].style.display = 'inline-block';
  }
    textElement2.style.display = 'inline-block';
    textElement3.style.display = 'inline-block';
  }
});



</script>
</body>
</html>